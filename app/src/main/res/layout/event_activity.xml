<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nwu"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="70dp"
        android:hint="No.of available tickets"
        android:textColorHint="@color/colorPrimary" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp"
        android:text="Select Number of Tickets"
        android:textColorHint="?attr/actionMenuTextColor" />

    <TextView
        android:id="@+id/adminusernameET"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="-130dp"
        android:ems="10"
        android:text="50" />

    <TextView
        android:id="@+id/bookedTV"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="170dp"
        android:text="Displays num of tickets"
        android:textColorHint="?attr/actionMenuTextColor" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-29dp"
        android:hint="No.of tickets booked"
        android:textColorHint="?attr/actionMenuTextColor" />

    <Button
        android:id="@+id/button9"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="238dp"
        android:onClick="onBack"
        android:text="back page" />

    <Button
        android:id="@+id/confirmBTN"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="-180dp"
        android:onClick="onConfirm"
        android:text="Confirm" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="-276dp" />

</LinearLayout>